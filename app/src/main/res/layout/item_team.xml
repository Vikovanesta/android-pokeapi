<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="8dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="start"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/k2d_bold"
            android:text="Sebuah TIm Mokakaramelam"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/image_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_pokemon1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/baseline_catching_pokemon_24"
            android:contentDescription="Icon Mahasiswa" />
        <ImageView
            android:id="@+id/iv_pokemon2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/baseline_catching_pokemon_24"
            android:contentDescription="Icon Mahasiswa" />
        <ImageView
            android:id="@+id/iv_pokemon3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/baseline_catching_pokemon_24"
            android:contentDescription="Icon Mahasiswa" />
        <ImageView
            android:id="@+id/iv_pokemon4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/baseline_catching_pokemon_24"
            android:contentDescription="Icon Mahasiswa" />
        <ImageView
            android:id="@+id/iv_pokemon5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/baseline_catching_pokemon_24"
            android:contentDescription="Icon Mahasiswa" />
        <ImageView
            android:id="@+id/iv_pokemon6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/baseline_catching_pokemon_24"
            android:contentDescription="Icon Mahasiswa" />
    </LinearLayout>
</LinearLayout>